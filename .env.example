# SuiteCRM PowerPack Environment Variables

# Database Configuration
SUITECRM_DATABASE_HOST=localhost
SUITECRM_DATABASE_PORT_NUMBER=3306
SUITECRM_DATABASE_USER=suitecrm
SUITECRM_DATABASE_PASSWORD=your_database_password
SUITECRM_DATABASE_NAME=suitecrm

# Site Configuration
SUITECRM_HOST=your-domain.com
APP_URL=https://your-domain.com

# Admin User (for auto-install)
SUITECRM_USERNAME=admin
SUITECRM_PASSWORD=your_admin_password
SUITECRM_EMAIL=admin@your-domain.com

# MySQL SSL (for managed databases like DigitalOcean)
MYSQL_CLIENT_ENABLE_SSL=no
MYSQL_CLIENT_SSL_CA_FILE=/opt/bitnami/mysql/certs/ca-certificate.crt

# Twilio Integration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_TWIML_APP_SID=APxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_SECRET=your_api_secret_here

# Notification WebSocket Server
NOTIFICATION_JWT_SECRET=your-secure-jwt-secret-here
NOTIFICATION_WS_URL=wss://your-domain.com:3001
NOTIFICATION_WS_PORT=3001

# Verbacall Integration
VERBACALL_API_URL=https://demo-ai.verbacall.com
VERBACALL_APP_URL=https://app.verbacall.com

# Email Configuration (Inbound - IMAP)
SUITECRM_SMTP_HOST=imap.gmail.com
SUITECRM_SMTP_PORT=993
SUITECRM_SMTP_PROTOCOL=imap
SUITECRM_SMTP_USER=your-email@gmail.com
SUITECRM_SMTP_PASSWORD=your-app-password

# Email Configuration (Outbound - SMTP)
SUITECRM_OUTBOUND_SMTP_HOST=smtp.gmail.com
SUITECRM_OUTBOUND_SMTP_PORT=587
SUITECRM_OUTBOUND_SMTP_USER=your-email@gmail.com
SUITECRM_OUTBOUND_SMTP_PASSWORD=your-app-password
SUITECRM_OUTBOUND_SMTP_AUTH=true
SUITECRM_OUTBOUND_SMTP_SECURITY=tls

# Azure OAuth (Office 365 Email Integration)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
